{
  "compilerOptions": {
      "strict": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "ESNext",
      "lib": ["DOM", "ESNext"],
      "isolatedModules": true,
      "moduleResolution": "node"
  },
  "include": [
    "pages/**/*",     // 你的所有源代码文件
    "types/**/*.d.ts"  // 包含 types 目录下的所有 d.ts 文件
  ]
}
